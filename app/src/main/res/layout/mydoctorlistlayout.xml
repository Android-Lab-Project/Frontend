<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/primary"
    android:layout_margin="10dp"
    app:cardCornerRadius="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp">


        <TextView
            android:id="@+id/mydoctor_view_title"
            android:layout_width="wrap_content"
            android:layout_height="57dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="34dp"
            android:layout_marginLeft="34dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="89dp"
            android:fontFamily="@font/roboto"
            android:gravity="center_horizontal"
            android:maxLines="1"
            android:text="Title"
            android:textColor="#fff"
            android:textSize="28dp" />

        <TextView
            android:id="@+id/mydoctor_view_idHello"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="14dp"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="205dp"
            android:fontFamily="@font/roboto"
            android:maxLines="1"
            android:paddingRight="100dp"
            android:text="Serial Number :"
            android:textColor="#fff"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/mydoctor_view_con"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="19dp"
            android:layout_marginLeft="19dp"
            android:layout_marginTop="104dp"
            android:fontFamily="@font/roboto"
            android:maxLines="1"
            android:paddingRight="100dp"
            android:text="Contact Info"
            android:textColor="#fff"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/myappointmenttime"
            android:layout_width="246dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mydoctor_view_con"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="15dp"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="132dp"
            android:text="Time : "
            android:textColor="#fff"
            android:textSize="24sp" />

        <Button
            android:id="@+id/Cancelfor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="131dp"
            android:layout_marginRight="131dp"
            android:layout_marginBottom="6dp"
            android:background="@drawable/button_green"
            android:fallbackLineSpacing="true"
            android:onClick="getCancel"
            android:text="Cancel"
            android:textAlignment="center"
            android:textColor="#F1E7E7"
            android:textSize="24sp" />


    </RelativeLayout>
</androidx.cardview.widget.CardView>