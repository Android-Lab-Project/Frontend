<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="0dp"
    android:layout_marginBottom="10dp"
    android:padding="@dimen/cardview_compat_inset_shadow"
    android:paddingBottom="10dp">

    <ImageView
        android:id="@+id/foodImage"
        android:layout_width="407dp"
        android:layout_height="0dp"
        android:src="@drawable/doctor"
        app:layout_constraintDimensionRatio="h,16:9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/foodName"
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:layout_height="59dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="1dp"
        android:layout_toEndOf="@+id/foodImage"
        android:fontFamily="@font/roboto"
        android:maxLines="1"
        android:text="Title"
        android:textColor="#000"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/foodImage" />

    <TextView
        android:id="@+id/foodQuantity"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_below="@+id/foodName"
        android:layout_toEndOf="@+id/foodImage"
        android:fontFamily="@font/roboto"
        android:text="Description"
        android:textColor="#000"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/foodName" />

    <TextView
        android:id="@+id/calories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/foodImage"
        android:layout_alignParentStart="true"
        android:fontFamily="@font/roboto"
        android:text="Calories :"
        android:layout_marginTop="10dp"
        android:textColor="#000"
        android:textSize="28sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/foodQuantity" />

    <TextView
        android:id="@+id/fat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/calories"
        android:layout_alignParentStart="true"
        android:fontFamily="@font/roboto"
        android:text="Fat :"
        android:textColor="#000"
        android:textSize="28sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/calories" />

    <TextView
        android:id="@+id/cholesterol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fat"
        android:layout_alignParentStart="true"
        android:fontFamily="@font/roboto"
        android:text="Cholesterol :"
        android:textColor="#000"
        android:textSize="28sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fat" />
    <TextView
        android:id="@+id/protein"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fat"
        android:layout_alignParentStart="true"
        android:fontFamily="@font/roboto"
        android:text="Protein :"
        android:textColor="#000"
        android:textSize="28sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cholesterol" />
    <TextView
        android:id="@+id/carbo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fat"
        android:layout_alignParentStart="true"
        android:fontFamily="@font/roboto"
        android:text="CarboHydrate :"
        android:textColor="#000"
        android:textSize="28sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/protein" />

    <TextView
        android:id="@+id/sugar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fat"
        android:layout_alignParentStart="true"
        android:fontFamily="@font/roboto"
        android:text="Sugar :"
        android:textColor="#000"
        android:textSize="28sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/carbo" />

</androidx.constraintlayout.widget.ConstraintLayout>