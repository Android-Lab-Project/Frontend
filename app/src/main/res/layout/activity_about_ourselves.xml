<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/primary"
    android:layout_margin="10dp"
    app:cardCornerRadius="10dp"
    tools:context=".AboutOurselves">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/real1">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/doctor_item_image"
                android:layout_width="185dp"
                android:layout_height="185dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="-26dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="72dp"
                android:foregroundGravity="center_vertical"
                android:src="@drawable/fahim" />


            <TextView
                android:id="@+id/doctor_view_title"
                android:layout_width="294dp"
                android:layout_height="83dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="13dp"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="123dp"
                android:fontFamily="@font/roboto"
                android:paddingRight="100dp"
                android:text="Fahim Shakil"
                android:textColor="#fff"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/text_view_description"
                android:layout_width="130dp"
                android:layout_height="59dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="215dp"
                android:layout_marginLeft="215dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="80dp"
                android:fontFamily="@font/roboto"
                android:text="Roll : 06"
                android:textColor="#fff"
                android:textSize="30dp" />


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_below="@+id/real1"
            android:background="@color/white"/>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/real2"
           >

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/doctor_item_image2"
                android:layout_width="186dp"
                android:layout_height="186dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="-26dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="72dp"
                android:foregroundGravity="center_vertical"
                android:src="@drawable/eyasir" />

            <TextView
                android:id="@+id/doctor_view_title2"
                android:layout_width="266dp"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="22dp"
                android:layout_marginLeft="22dp"
                android:layout_marginTop="142dp"
                android:fontFamily="@font/roboto"
                android:maxLines="1"
                android:paddingRight="100dp"
                android:text="Abrar Eyasir"
                android:textColor="#fff"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/text_view_description2"
                android:layout_width="126dp"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="213dp"
                android:layout_marginLeft="213dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="89dp"
                android:fontFamily="@font/roboto"
                android:text="Roll : 12"
                android:textColor="#fff"
                android:textSize="30dp" />


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="@color/white"
            android:layout_below="@+id/real2"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/doctor_item_image3"
                android:layout_width="185dp"
                android:layout_height="185dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="-26dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="72dp"
                android:foregroundGravity="center_vertical"
                android:src="@drawable/araf" />

            <TextView
                android:id="@+id/doctor_view_title3"
                android:layout_width="334dp"
                android:layout_height="60dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="17dp"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="132dp"
                android:layout_marginEnd="-17dp"
                android:fontFamily="@font/roboto"
                android:paddingRight="100dp"
                android:text="Al Mahmud"
                android:textColor="#fff"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/text_view_description3"
                android:layout_width="152dp"
                android:layout_height="55dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="214dp"
                android:layout_marginLeft="214dp"
                android:layout_marginTop="-4dp"
                android:layout_marginBottom="108dp"
                android:fontFamily="@font/roboto"
                android:text="Roll : 15"
                android:textColor="#fff"
                android:textSize="30dp" />


        </RelativeLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>





