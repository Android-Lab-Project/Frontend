<?xml version="1.0" encoding="utf-8"?>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".DoctorDashboard">

        <LinearLayout
            android:id="@+id/view"

            android:layout_width="0dp"
            android:layout_height="215dp"
            android:background="@drawable/rectangle_round"
            android:elevation="6dp"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome!"
                android:textColor="#ffffff"
                android:textSize="26sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Choose an option"
                android:textColor="#ffffff"
                android:textSize="16sp" />
        </LinearLayout>

        <Button
            android:id="@+id/aiFeaturesDoctor"
            android:layout_width="175dp"
            android:layout_height="130dp"
            android:layout_marginTop="81dp"
            android:layout_marginBottom="237dp"
            android:background="@drawable/button_home"
            android:text="AI Feature"
            android:onClick="ai"
            android:textColor="#E8ECEF"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.932"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view"
            app:layout_constraintVertical_bias="0.0" />

        <Button
            android:layout_width="175dp"
            android:layout_height="130dp"
            android:layout_marginTop="80dp"
            android:background="@drawable/button_home"
            android:text="Patients"
            android:onClick="myListDoctor"
            android:id="@+id/appointmentDetailForDoctor"
            android:textColor="#E8ECEF"
            android:textSize="23sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.067"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view" />

    <Button
        android:id="@+id/myDoctorMedicine23"
        android:layout_width="175dp"
        android:layout_height="130dp"
        android:layout_marginTop="232dp"
        android:background="@drawable/button_home"
        android:text="Medicine List"
        android:onClick="medicineListW"
        android:textColor="#E8ECEF"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.951"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view" />

    <Button
        android:id="@+id/myDoctorProfile"
        android:onClick="doctorPro"
        android:layout_width="175dp"
        android:layout_height="130dp"
        android:layout_marginTop="232dp"
        android:background="@drawable/button_home"
        android:text="Profile"
        android:textColor="#E8ECEF"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.067"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/signOutDoctor"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:paddingLeft="20dp"
        android:text="Sign Out"
        android:textSize="20sp"
        android:textStyle="bold"
        app:cornerRadius="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/myDoctorProfile" />


</androidx.constraintlayout.widget.ConstraintLayout>

